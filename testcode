{% block Javascript %}
<script>
    $("#scrap-friend").submit(function(e){
      e.preventDefault();
      var serializeData = $(this).serialize();
      $.ajax({
          type:'GET',
          url:"{% url 'scrapfriend_view'' %}",
          data: serializeData,
          success: function(response){
              $("#scrap-friend").trigger('reset');
              $("#id_nickname").focus();
              var instance = JSON.parse(response["instance"]);
              var fields = instance[0]["fields"];
              $("#scrap_table tbody").prepend(
                  '<tr> \
                  <td>${fields["nickname"] || ""}</td>\
                  <td>${fields["firstname"] || ""}</td>\
                  <td>${fields["lastname"] || ""}</td>\
                  <td>${fields["likes"] || ""}</td>\
                  <td>${fields["dob"] || ""}</td>\
                  <td>${fields["living"] || ""}</td>\
                  </tr>'
              )
          },
          error: function(response){
              alert(response["responseJSON"]["error"]);
          }
      })
    })
  </script>
{% endblock Javascript %}


def delete_record(request,id):
    if request.method == 'POST':
        user_id = ScrapFriend.objects.get(pk=id)
        user_id.delete()
        return HttpResponseRedirect('/')

def update_record(request, id):
    if request.method == 'POST':
        user_id = ScrapFriend.objects.get(pk=id)
        form = ScrapFriendForm(request.POST, instance=user_id)
        if form.is_valid():
            form.save()      
    else:
        user_id = ScrapFriend.objects.get(pk=id)
        form = ScrapFriendForm(instance=user_id)

    context = {
        'form':form,
    }
    return render(request, 'ajaxapp/update.html', context)

<td>
<a href="{% url 'update-record' friend.id %}"><i class="btn btn-warning btn-sm fa fa-edit" aria-hidden="true"></i></a>          
<form action="{% url 'delete-record' friend.id %}" method="post" class="d-inline">{% csrf_token %}
    <button type="submit">
    <i class="btn btn-danger btn-sm fa fa-trash" aria-hidden="true"></i>
    </button>
</form>               
</td>

path('delete-record/<int:id>', delete_record, name="delete-record"),
path('update-record/<int:id>', update_record, name='update-record'),



