            <th scope="col">DOB</th>
            <th scope="col">Living</th>
        
          </tr>
        </thead>
        <tbody>
            
          {% for friend in friends %}
          <tr>
            <th scope="row">{{forloop.counter}}</th>
            <td>{{friend.nickname}}</td>
            <td>{{friend.firstname}}</td>
            <td>{{friend.lastname}}</td>
            <td>{{friend.likes}}</td>
            <td>{{friend.dob | date:"Y-m-d"}}</td>
            <td>{{friend.living}}</td> 
           
          </tr>
          {% endfor %}
        </tbody>
      </table>
</div>
